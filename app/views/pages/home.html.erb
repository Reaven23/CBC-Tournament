<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-4">
          <i class="fas fa-basketball-ball text-warning me-3"></i>
          TournamentGo
        </h1>
        <p class="lead mb-4">
          Gestion moderne et intuitive de tournois de basketball.
          Suivez vos tournois en temps réel et consultez les résultats.
        </p>
        <div class="d-flex flex-wrap gap-3">
          <%= link_to tournaments_path, class: "btn btn-warning btn-lg" do %>
            <i class="fas fa-trophy me-2"></i>
            Voir les tournois
          <% end %>
          <% unless user_signed_in? %>
            <%= link_to new_user_session_path, class: "btn btn-outline-light btn-lg" do %>
              <i class="fas fa-sign-in-alt me-2"></i>
              Se connecter
            <% end %>
          <% else %>
            <% if current_user.super_admin? || current_user.organizer? %>
              <%= link_to admin_root_path, class: "btn btn-outline-light btn-lg" do %>
                <i class="fas fa-tachometer-alt me-2"></i>
                Dashboard Admin
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6 text-center">
        <i class="fas fa-basketball-ball display-1 text-warning opacity-75"></i>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col-12">
        <h2 class="display-5 fw-bold mb-3">Fonctionnalités</h2>
        <p class="lead text-muted">Tout ce dont vous avez besoin pour organiser un tournoi parfait</p>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center p-4">
            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <i class="fas fa-users text-primary fs-2"></i>
            </div>
            <h5 class="card-title">Suivi des équipes</h5>
            <p class="card-text text-muted">
              Consultez les équipes organisées en poules et suivez leurs performances en temps réel.
            </p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center p-4">
            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <i class="fas fa-calendar-alt text-success fs-2"></i>
            </div>
            <h5 class="card-title">Planning en temps réel</h5>
            <p class="card-text text-muted">
              Consultez les matchs programmés et les phases finales avec mise à jour automatique.
            </p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center p-4">
            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <i class="fas fa-mobile-alt text-warning fs-2"></i>
            </div>
            <h5 class="card-title">Mobile First</h5>
            <p class="card-text text-muted">
              Interface optimisée pour mobile, parfaite pour consulter les résultats sur le terrain.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

