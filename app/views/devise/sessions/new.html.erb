<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <div class="login-logo">
        <i class="fas fa-basketball-ball"></i>
      </div>
      <h2 class="login-title">TournamentGo</h2>
      <p class="login-subtitle">Connexion Administration</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="form-inputs">
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: "Email",
                      input_html: {
                        autocomplete: "email",
                        class: "form-control",
                        placeholder: "votre@email.com"
                      },
                      wrapper_html: { class: "mb-3" } %>
        </div>

        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      label: "Mot de passe",
                      input_html: {
                        autocomplete: "current-password",
                        class: "form-control",
                        placeholder: "Votre mot de passe"
                      },
                      wrapper_html: { class: "mb-3" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
          </div>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-login" %>
      </div>
    <% end %>

    <div class="login-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
