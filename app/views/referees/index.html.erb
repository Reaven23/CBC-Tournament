<div class="referees-page">
  <div class="container-fluid px-3">
    <!-- Header -->
    <section class="referees-header mb-4">
      <div class="d-flex align-items-center mb-3">
        <%= link_to tournament_path(@tournament), class: "btn btn-outline-primary me-3" do %>
          <i class="fas fa-arrow-left me-2"></i>
          Retour au tournoi
        <% end %>
        <h1 class="page-title mb-0">
          <i class="fas fa-gavel me-2 text-primary"></i>
          Arbitres - <%= @tournament.name %>
        </h1>
      </div>
      <p class="text-muted">Découvrez tous les arbitres du tournoi et leur planning de matchs</p>
    </section>

    <!-- Referees List -->
    <% if @referees.any? %>
      <section class="referees-list">
        <div class="row">
          <% @referees.each do |referee| %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="referee-card">
                <%= link_to tournament_referee_path(@tournament, referee), class: "referee-link" do %>
                  <div class="referee-info">
                    <div class="referee-avatar">
                      <i class="fas fa-gavel"></i>
                    </div>
                    <div class="referee-details">
                      <h4 class="referee-name"><%= referee.name %></h4>
                      <div class="referee-stats">
                        <div class="stat-row">
                          <span class="stat-item">
                            <i class="fas fa-basketball-ball me-1"></i>
                            <%= referee.games.count %> match<%= 's' if referee.games.count > 1 %>
                          </span>
                        </div>
                        <div class="stat-row">
                          <span class="stat-item">
                            <i class="fas fa-check-circle me-1 text-success"></i>
                            <%= referee.games.where(status: 'played').count %> terminé<%= 's' if referee.games.where(status: 'played').count > 1 %>
                          </span>
                          <span class="stat-item">
                            <i class="fas fa-clock me-1 text-warning"></i>
                            <%= referee.games.where(status: 'scheduled').count %> à venir
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="referee-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% else %>
      <div class="no-referees text-center py-5">
        <i class="fas fa-gavel fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Aucun arbitre assigné</h4>
        <p class="text-muted">Les arbitres seront bientôt assignés aux matchs.</p>
      </div>
    <% end %>
  </div>
</div>
