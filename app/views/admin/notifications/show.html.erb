<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
          <i class="fas fa-bell me-2"></i>
          Détail de la notification
        </h1>
        <%= link_to admin_notifications_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-2"></i>
          Retour aux notifications
        <% end %>
      </div>

      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                  <i class="fas fa-envelope me-2"></i>
                  <%= @notification.notification_type.humanize %>
                </h5>
                <span class="badge bg-primary">
                  <%= @notification.formatted_created_at %>
                </span>
              </div>
            </div>
            <div class="card-body">
              <div class="row mb-3">
                <div class="col-sm-3">
                  <strong>Email :</strong>
                </div>
                <div class="col-sm-9">
                  <a href="mailto:<%= @notification.email %>" class="text-decoration-none">
                    <i class="fas fa-envelope me-2"></i>
                    <%= @notification.email %>
                  </a>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-3">
                  <strong>Type :</strong>
                </div>
                <div class="col-sm-9">
                  <span class="badge bg-info">
                    <%= @notification.notification_type.humanize %>
                  </span>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-3">
                  <strong>Message :</strong>
                </div>
                <div class="col-sm-9">
                  <p class="mb-0"><%= @notification.message %></p>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <%= link_to "mailto:#{@notification.email}",
                    class: "btn btn-primary" do %>
                  <i class="fas fa-reply me-2"></i>
                  Répondre par email
                <% end %>
                <%= link_to admin_notification_path(@notification),
                    method: :delete,
                    class: "btn btn-danger",
                    data: {
                      confirm: "Êtes-vous sûr de vouloir supprimer cette notification ?",
                      turbo_method: :delete
                    } do %>
                  <i class="fas fa-trash me-2"></i>
                  Supprimer
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
