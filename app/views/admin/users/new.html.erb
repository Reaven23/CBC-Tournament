<div class="row">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0">Nouvel organisateur</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [:admin, @user] do |f| %>
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <%= f.input :first_name, label: 'Prénom' %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.input :last_name, label: 'Nom' %>
            </div>
            <div class="col-12">
              <%= f.input :email %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.input :password, hint: '6 caractères minimum' %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.input :password_confirmation, label: 'Confirmation du mot de passe' %>
            </div>

            <div class="col-12">
              <div class="mb-3">
                <label class="form-label">Assigner à un tournoi</label>
                <%= select_tag 'user[tournament_id]', options_for_select([["— Aucun —", ""], *@tournaments.map { |t| [t.name, t.id] }]), class: 'form-select' %>
              </div>
            </div>

            <div class="col-12 d-flex gap-2">
              <%= f.submit 'Créer', class: 'btn btn-primary' %>
              <%= link_to 'Annuler', admin_users_path, class: 'btn btn-outline-secondary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
