<div class="col-md-4 mb-4" id="pool_card_<%= pool.id %>">
  <div class="card h-100">
    <div class="card-header bg-primary text-white" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#poolModal<%= pool.id %>">
      <h5 class="card-title mb-0">
        <i class="fas fa-layer-group me-2"></i>
        <%= pool.name %>
        <i class="fas fa-edit float-end mt-1"></i>
      </h5>
      <small><%= pool.teams.count %> Ã©quipes</small>
    </div>
    <div class="card-body p-2">
      <% if pool.teams.any? %>
        <% standings = pool.standings %>
        <% standings.each_with_index do |team, index| %>
          <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded <%= 'qualified' if tournament.pool_games.all?(&:played?) && tournament.is_team_qualified?(team) %>">
            <div class="d-flex align-items-center">
              <% if team.photo.attached? %>
                <%= image_tag team.photo, alt: team.name, class: "team-photo-small me-2" %>
              <% end %>
              <div>
                <div class="fw-bold d-flex align-items-center">
                  <span class="me-2">#<%= index + 1 %></span>
                  <%= team.name %>
                  <% if tournament.pool_games.all?(&:played?) && tournament.is_team_qualified?(team) %>
                    <span class="qualification-badge ms-2">
                      <% if index < 2 %>
                        <i class="fas fa-check-circle text-success" title="QualifiÃ© (top 2)"></i>
                      <% elsif index == 2 && tournament.is_team_best_third?(team) %>
                        <i class="fas fa-star text-warning" title="QualifiÃ© (meilleur 3Ã¨me)"></i>
                      <% end %>
                    </span>
                  <% end %>
                </div>
                <div class="small text-muted">
                  <span class="me-2">ðŸ“Š <%= team.win_loss_record %></span>
                  <span class="badge bg-primary">ðŸ’¯ <%= team.points %>pts</span>
                </div>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <%= link_to remove_team_from_pool_admin_tournament_team_path(@tournament, team), data: { turbo_method: :patch, turbo_frame: "pool_modal_#{pool.id}" }, class: "btn btn-sm btn-outline-danger", title: "Retirer" do %>
                <i class="fas fa-times"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted text-center py-3 mb-0">Aucune Ã©quipe</p>
      <% end %>
    </div>
  </div>
</div>
