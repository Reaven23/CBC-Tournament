<div class="col-md-4 mb-4" id="pool_card_<%= pool.id %>">
  <div class="card h-100">
    <div class="card-header bg-primary text-white" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#poolModal<%= pool.id %>">
      <h5 class="card-title mb-0">
        <i class="fas fa-layer-group me-2"></i>
        <%= pool.name %>
        <i class="fas fa-edit float-end mt-1"></i>
      </h5>
      <small><%= pool.teams.count %> équipes</small>
    </div>
    <div class="card-body p-2">
      <% if pool.teams.any? %>
        <% pool.teams.each do |team| %>
          <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded">
            <div class="d-flex align-items-center">
              <% if team.photo.attached? %>
                <%= image_tag team.photo, alt: team.name, class: "team-photo-small me-2" %>
              <% end %>
              <span class="fw-bold"><%= team.name %></span>
            </div>
            <div class="d-flex align-items-center">
              <span class="badge me-2" style="background-color: <%= team.color %>; color: white; font-size: 0.7rem;">
                <%= team.color %>
              </span>
              <%= link_to remove_team_from_pool_admin_tournament_team_path(@tournament, team), data: { turbo_method: :patch, turbo_frame: "pool_modal_#{pool.id}" }, class: "btn btn-sm btn-outline-danger", title: "Retirer" do %>
                <i class="fas fa-times"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted text-center py-3 mb-0">Aucune équipe</p>
      <% end %>
    </div>
  </div>
</div>
