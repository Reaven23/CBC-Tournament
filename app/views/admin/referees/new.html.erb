<div class="row">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0">
          <i class="fas fa-whistle"></i>
          Nouvel arbitre
        </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@tournament, @referee], url: admin_tournament_referees_path(@tournament) do |f| %>
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <%= f.input :first_name, label: 'Prénom', required: true %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.input :last_name, label: 'Nom', required: true %>
            </div>
            <div class="col-12">
              <%= f.input :email, label: 'Email', type: :email %>
            </div>
            <div class="col-12">
              <%= f.input :phone, label: 'Téléphone' %>
            </div>

            <div class="col-12 d-flex gap-2">
              <%= f.submit 'Créer', class: 'btn btn-primary' %>
              <%= link_to admin_tournament_referees_path(@tournament), class: 'btn btn-outline-secondary' do %>
                <i class="fas fa-times"></i>
                Annuler
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
